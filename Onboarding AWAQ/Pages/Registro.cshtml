@page
@model Onboarding_AWAQ.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Pages/Shared/_LayoutSideBar.cshtml";
}

<div class="row">
    <h1>Registro de nuevo colaborador</h1>
</div>
<form method="post" class="row row-registro" enctype="multipart/form-data">
    <div class="input-group registro-form">
        <!-- País -->
        <div class="input col-12">
            <label class="forms-paragraph">País</label>
            <select asp-for="pais"> 
                <option selected>Selecciona</option>
                <option value="España">España</option>
                <option value="Mexico">México</option>
                <option value="Colombia">Colombia</option>
            </select>
        </div>
        <!-- Ciudad -->
        <div class="input col-12">
            <label class="forms-paragraph">Ciudad</label>
            <select asp-for="ciudad"> 
                <option selected>Selecciona</option>
                <option value="Barcelona">Barcelona</option>
                <option value="CDMX">CDMX</option>
                <option value="Bogota">Bogota</option>
            </select>
        </div>
        <!-- Departamento -->
        <div class="input col-12">
            <label class="forms-paragraph">Departamento</label>
            <select asp-for="departamento"> 
                <option selected>Selecciona</option>
                <option value="TEDI">TEDI</option>
                <option value="Recursos Humanos">Recursos humanos</option>
            </select>
        </div>
        <!-- Foto de perfil -->
        <div class="input-img col-12">
            <label class="label-file forms-paragraph">Foto de perfil</label>
            <label class="label-file"></label>
            <div class="input-file">
                <p class="file-return">Seleccionar imagen</p>
                <input id="my-file" type="file" accept="image/png, image/jpeg" onchange="displayFileName()" asp-for="perfil">
                <label for="my-file">Subir imagen</label>
            </div>
        </div>

        <!-- Nombre -->
        <div class="input col-12">
            <label class="forms-paragraph">Nombre</label>
            <input type="text" asp-for="nombre">
        </div>
        <!-- Mail -->
        <div class="input col-12">
            <label class="forms-paragraph">Correo</label>
            <input type="text" asp-for="correo">
        </div>
        <!-- Number -->
        <div class="input col-12">
            <label class="forms-paragraph">Número</label>
            <input type="text" asp-for="telefono">
        </div>
        <!-- Temp password -->
        <div class="input col-12">
            <label class="forms-paragraph">Contraseña provicional</label>
            <input type="text" asp-for="contrasena">
        </div>
        
    </div>  
    <div class="card-button">
        <div class="card-colab">
            <img class="colab-img" src="../img/UnsetUser.png">
            <div class="card-name-dept">
                <h1 class="card-title nombre">Nombre</h1>
                <h2 class="card-subtitle departamento">Departamento</h2>
            </div>
            <div class="card-details">
                <div class="card-location">
                    <h1 class="card-title ciudad">Ciudad</h1>
                    <h2 class="card-subtitle pais">País</h2>
                </div>
                <p class="correo">awaq.ejemplo@gmail.com</p>
                <p class="telefono">+00 000 0000 00</p>
            </div>
        </div>
        <button type="submit" class="btn btn-dark col-12 inicioSesion-btn">Registrar</button>
    </div>    
</form>



