@page
@model Onboarding_AWAQ.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Pages/Shared/_LayoutSideBar.cshtml";
}

<div class="row">
    <h1>Registro de nuevo colaborador</h1>
</div>
<form class="row h-100" method="post">
    <div class="col">
        <div class="pt-2" style="max-width: 424px">
            <p class="forms-paragraph">País</p>
            <div class="form-outline mb-3">
                <select class="form-select input-forms" aria-label="Default select example" asp-for="pais">
                    <option selected>Selecciona</option>
                    <option value="España">España</option>
                    <option value="México">México</option>
                    <option value="Colombia">Colombia</option>
                </select>
            </div>

            <p class="forms-paragraph">Ciudad</p>
            <div class="form-outline mb-3">
                <select class="form-select input-forms" aria-label="Default select example" asp-for="ciudad">
                    <option selected>Selecciona</option>
                    <option value="CDMX">CDMX</option>
                    <option value="Barcelona">Barcelona</option>
                    <option value="Bogotá">Bogotá</option>
                </select>
            </div>

            <p class="forms-paragraph">Departamento</p>
            <div class="form-outline mb-3">
                <select class="form-select input-forms" aria-label="Default select example" asp-for="departamento">
                    <option selected>Selecciona</option>
                    <option value="Recursos Humanos">Recursos Humanos</option>
                    <option value="TEDI">TEDI</option>
                </select>
            </div>

            <p class="forms-paragraph">Nombre</p>
            <div class="form-outline mb-3">
                <input class="input-forms form-control" asp-for="nombre">
            </div>

            <p class="forms-paragraph">Correo</p>
            <div class="form-outline mb-3">
                <input class="input-forms form-control" asp-for="correo">
            </div>

            <p class="forms-paragraph">Numero</p>
            <div class="form-outline mb-3">
                <input class="input-forms form-control" asp-for="telefono" maxlength="15">
            </div>
        </div>
    </div>
    <div class="col"> <!-- Add 'd-flex justify-content-center align-items-center' to center content vertically and horizontally -->
        <div class="row">
            <div class="col">
                <div class="pt-2" style="max-width: 424px"> <!-- Add 'mx-auto' to center the form horizontally -->
                    <p class="forms-paragraph">Contraseña provisional</p>
                    <div class="form-outline mb-3">
                        <input class="input-forms form-control" asp-for="contraseña">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="max-width: 336px;">
                <div class="colab-card">
                    <div class="img-perfil">
                        <img src="~/img/profile.png">
                    </div>
                    <div class="titles">
                        <h3>Nombre</h3>
                        <h4>Departamento</h4>
                    </div>
                    <div class="details">
                        <div class="location">
                            <h3>Pais</h3>
                            <h4>Ciudad</h4>
                        </div>
                        <p>correo@example.com</p>
                        <p>+52 12 123 12 12</p>
                    </div>
                </div>
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-dark col-12 inicioSesion-btn">Registrar Colaborador</button>
                </div>
            </div>
        </div>
    </div>
</form>
